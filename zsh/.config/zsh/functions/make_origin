# Create a remote repository
if [[ -z "$1" ]]; then
    echo "Usage: make_origin [REPO_NAME]"
else
    local repo_name
    repo_name="$1"
    local directory
    directory="${HOME}/local/repos/${repo_name}"
    mkdir "$directory"
    cd "$directory"
    git init --bare --shared=group
    sudo chgrp -R engineers "$directory"
    sudo chmod -R g+rw "$directory"
fi
